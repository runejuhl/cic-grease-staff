{% extends "mockup.jinja2" %}
{% block pagetitle %}<h1>Staff at Centre for Ice and Climate</h1>{% endblock %}
{% block content %}
<ul>
{% for person in persons %}
<li id="{{ person.id }}" class="business-card">
  <div>
      {% if person.picture %}
        <div class="photo">
          <img src="http://cms.ku.dk{{ person.picture }}" title="{{ person.firstname }} {{ person.lastname }}" alt="Picture of {{ person.firstname }} {{ person.lastname }}" />
        </div>
      {% endif %}
    <h1><a href="http://www.isogklima.nbi.ku.dk/ansatte/?id={{ person.kuid }}&vis=medarbejder">{{ person.firstname }} {{ person.lastname }}</a></h1>
    {% if person.title %}<h2>{{ person.title }}</h2>{% endif %}
    {% if person.tags %}<ul class="tags" style="display:none;">{% for tag in person.tags|split %}<li>{{ tag }}</li>{% endfor %}</ul>{% endif %}
    <div class="row-wrapper">
      <div class="column info">
        <ul class="contact">
          <li class="phone{% if not person.phone %} hidden{% endif %}">Phone: <a href="tel:{{ person.phone }}" class="phone">{{ person.phone }}</a></li>
          <li class="email{% if not person.email %} hidden{% endif %}">E-mail: <a href="mailto:{{ person.email }}" class="email">{{ person.email }}</a></li>
          <li class="homepage{% if not person.homepage %} hidden{% endif %}">Homepage: <a href="{{ person.homepage }}" class="homepage">{{ person.homepage }}</a></li>
        </ul>
      </div>
      <div class="column description">
        {{ person.description }}
      </div>
    </div>
  </div>
</li>
{% endfor %}
</ul>
{% endblock %}
